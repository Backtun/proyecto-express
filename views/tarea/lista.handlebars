<div class="task-list mdl-card mdl-shadow--2dp">
		<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
			<input class="mdl-textfield__input" ng-model="tarea" type="text" id="titulo" name="titulo" />
			<label class="mdl-textfield__label" for="titulo">QuÃ© quieres hacer hoy...</label>
		</div>
		
      <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" data-upgraded=",MaterialButton,MaterialRipple">
        <i class="material-icons" ng-click="agregar(tarea)">add_box</i>
      </button>

	<div class="task-item" ng-repeat="tarea in tareas | filter: {completada:filtro}">
		<label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect mdl-card__supporting-text" for="[{tarea.id}]">
			<input type="checkbox" id="[{tarea.id}]" class="mdl-checkbox__input" ng-checked="[{tarea.completada}]" ng-click='cambiarEstado(tarea,tarea.completada)'/>
			<span class="mdl-checkbox__label">[{tarea.nombre}]</span>
			<button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-checkbox__delete" data-upgraded=",MaterialButton,MaterialRipple">
	        <i class="material-icons" ng-click='eliminar(tarea)'>clear</i> 
	      </button>
		</label>
	</div>

	<div class="mdl-card__actions mdl-grid">
		<div class="mdl-cell mdl-cell--5-col">
			<span class="pending-task-count">[{cantidad}]</span> tareas pendientes
		</div>
		<div class="mdl-cell mdl-cell--7-col">
			<span class="task-filter" ng-class="{active: estaActivo('todas')}"><a href="#" ng-click="setFiltro()">Todas</a></span>
			<span class="task-filter" ng-class="{active: estaActivo('pendientes')}"><a href="#" ng-click="setFiltro(false)">Pendientes</a></span>
			<span class="task-filter" ng-class="{active: estaActivo('completas')}"><a href="#" ng-click="setFiltro(true)">Completas</a></span>
		</div>
	</div>
</div>
